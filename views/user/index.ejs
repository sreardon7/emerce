<div class = 'container'>
  <div class = 'jumbotron'>
  <h3> Users </h3>
  <table class = 'table'>
  	<tr>
      <th></th>
  		<th>ID</th>
  		<th>Names</th>
  		<th>Title</th>
  		<th>Email</th>
  		<th></th>
  		<th></th>
      <th></th>
      <th></th>
  	</tr>

  	<% _.each(users, function(user) { %>
  	<tr data-id='<%= user.id %>' data-model='user'>
      <% if (user.online) { %>
        <td><img src = '/images/online.png' height = '45' width = '45'></td>
      <% } else  {%>
        <td><img src = '/images/offline.png' height = '45' width = '45'></td>
      <% } %>
  		<td><%= user.id %></td>
  		<td><%= user.name %></td>
  		<td><%= user.title %></td>  
  		<td><%= user.email %></td>
      <% if (user.admin) { %>
       <td> <img src = '/images/admin.png' height = '45' width = '45'></td>
        <% } else { %> 
        <td> <img src = '/images/basic.png' height = '45' width = '45'></td>
      <% } %>
  		<td><a href='user/show/<%=user.id %>' class = 'btn btn-sm btn-primary'>Show</a></td>
  		<td><a href='user/edit/<%=user.id %>' class = 'btn btn-sm btn-warning'>Edit</a></td>
      <td> <form action="/user/destroy/<%=user.id %>" method="POST">
        <input type = 'hidden' name='_method' value = 'delete' />
        <input type = 'submit' class = 'btn btn-sm btn-danger' value = 'Delete' />
        <input type='hidden' name='_csrf' value = '<%= _csrf %>' />
      </form></td>
  		
  	</tr>

  	<% }) %>
  </table>
  </div>
 </div>